<i class="fa fa-mobile"></i> Aplicativo
</h1>
</div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title text-muted"><i class="fa fa-quote-left fa-fw"></i> Dados da Tela Aplicativo no Momento</h3>
            </div>
            <div class="panel-body">
                <div id="morris-area-chart">
                  <% if !Aplicativo.count.nil? %>
                    <% if @app.first_paragraph.present? || @app.second_paragraph.present? || @app.third_paragraph.present? || @app.forth_paragraph.present? %>
                      <% if @app.first_paragraph.present? %>
                        <p><b>Primeiro Paragrafo:</b><br> <%= @app.first_paragraph %></p>
                      <% end %>

                      <% if @app.second_paragraph.present? %>
                        <p><b>Segundo Paragrafo:</b><br> <%= @app.second_paragraph %></p>
                      <% end %>

                      <% if @app.third_paragraph.present? %>
                        <p><b>Terceiro Paragrafo:</b><br> <%= @app.third_paragraph %></p>
                      <% end %>

                      <% if @app.forth_paragraph.present? %>
                        <p><b>Quarto Paragrafo:</b><br> <%= @app.forth_paragraph %></p>
                      <% end %>
                    <% end %>
                    <%= link_to edit_aplicativo_path(@app), class: 'btn btn-primary pull-right' do %>
                      <%= icon('edit') %> Editar Postagem
                    <% end %>
                  <% else %>
                    Sem postagem registrada
                    <%= link_to new_aplicativo_path, class: 'btn btn-success pull-right', data: { confirm: "Você está prestes a criar uma publicação para a tela de Aplicativo" } do %>
                      <%= icon('plus') %> Criar Postagem
                    <% end %>
                  <% end %>
                </div>
            </div>
        </div>


    </div>
</div>
