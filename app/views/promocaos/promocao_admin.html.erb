<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title text-muted"><i class="fa fa-quote-left fa-fw"></i> Dados da Tela Promoção no Momento</h3>
            </div>
            <div class="panel-body">
                <div id="morris-area-chart">
                  <% if Promocao.count != 0 %>
                    <% if !@promocao.texto.nil? %>
                      <p><b>Texto:</b> <%= @promocao.texto %></p>
                      <%= link_to edit_promocao_path(@promocao), class: 'btn btn-primary pull-right' do %>
                        <%= icon('edit') %> Editar Postagem
                      <% end %>
                    <% end %>                    
                  <% else %>
                    Sem postagem registrada
                    <%= link_to new_promocao_path, class: 'btn btn-success pull-right', data: { confirm: "Modificando a postagem o conteúdo atual da página Promoção será alterado" } do %>
                      <%= icon('plus') %> Criar Postagem
                    <% end %>

                  <% end %>


                </div>
            </div>
        </div>


    </div>
</div>
