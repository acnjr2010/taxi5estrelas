<!-- Top content -->

<section>
<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                  <div class="form-top">
                    <div class="form-top-left">
                      <h3>Acesso Administrativo</h3>
                        <p>Entre com seu email e senha</p>
                    </div>
                    <div class="form-top-right">
                      <i class="fa fa-lock"></i>
                    </div>
                    </div>
                    <div class="form-bottom">
                      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="form-inputs">
                          <%= f.input :email, autofocus: true, required: true %>
                          <%= f.input :password, label: "Senha", autofocus: true, required: true %>
                          <%= f.input :remember_me, label: "Lembrar-me", as: :boolean if devise_mapping.rememberable? %>
                        </div>

                        <div class="form-actions">
                          <%= f.submit "Logar", class: "btn btn-success pull-right" %>
                        </div>
                      <% end %>

                      <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
</section>
